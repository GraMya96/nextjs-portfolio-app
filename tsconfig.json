{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"types": ["node", "jest"],
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@testing-library",
			"node_modules/@testing-library/jest-dom"
		],
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"./jest.config.ts",
		"./jest.setup.ts"
	],
	"exclude": ["node_modules"]
}
